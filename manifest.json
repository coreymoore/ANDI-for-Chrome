{
  "manifest_version": 3,
  "name": "ANDI for Chrome",
  "version": "29.2.2.0",
  "description": "Community port of the Accessible Name & Description Inspector (ANDI) bookmarklet as a Google Chrome extension.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Toggle ANDI"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "andi/**",
        "jquery.min.js"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
